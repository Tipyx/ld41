{
    "version": "0.1.0",
    "command": "haxe",
    // "args": ["--connect","6001"],
    "problemMatcher": {
        "owner": "haxe",
        "pattern": {
            "regexp": "^(.+):(\\d+): (?:lines \\d+-(\\d+)|character(?:s (\\d+)-| )(\\d+)) : (?:(Warning) : )?(.*)$",
            "file": 1,
            "line": 2,
            "endLine": 3,
            "column": 4,
            "endColumn": 5,
            "severity": 6,
            "message": 7
        }
    },
    "tasks": [
        {
            "taskName": "HL Debug",
            "suppressTaskName": true,
            "args": ["-debug", "buildhl.hxml"],
            "showOutput": "silent",
            "isBuildCommand": true,
        },
        {
            "taskName": "HL",
            "suppressTaskName": true,
            "args": ["buildhl.hxml"],
            "showOutput": "silent",
            "isBuildCommand": true,
        },
        {
            "taskName": "Flash Debug",
            "suppressTaskName": true,
            "args": ["build.hxml"],
        }
    ],
}
